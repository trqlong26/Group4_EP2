<AnchorPane opacity="0.9" prefHeight="600.0" prefWidth="900.0" styleClass="root" stylesheets="@../style/login.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aptech.hotel_management.controller.LoginController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="250.0" layoutY="49.0" prefHeight="450.0" prefWidth="400.0" styleClass="login_container">
         <children>
            <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="300.0" styleClass="login_form">
               <children>
                  <Label alignment="CENTER" styleClass="login_label" text="Login" />
                  <VBox>
                     <children>
                        <VBox>
                           <children>
                              <Label styleClass="input_box_label" text="Email" />
                              <TextField styleClass="input_box" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label styleClass="input_box_label" text="Password" />
                              <PasswordField styleClass="input_box" />
                           </children>
                           <padding>
                              <Insets top="20.0" />
                           </padding>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin>
                  </VBox>
                  <Button mnemonicParsing="false" styleClass="btn" text="Login">
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="50.0" top="50.0" />
         </padding>
      </VBox>
   </children>
